<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/smart_watch_control_width"
    android:layout_height="@dimen/smart_watch_control_height" >

    <ImageView
        android:id="@+id/loading_icon"
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_centerInParent="true"
        android:src="@drawable/loading_icn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loading_icon"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/loading_image"
        android:textColor="@color/color_white"
        android:textSize="@dimen/smart_watch_text_size_normal" />

</RelativeLayout>